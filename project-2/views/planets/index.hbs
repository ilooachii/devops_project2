<section>    
    <h1>Planets</h1>
    <h2>Ajouter une nouvelle planète</h2>
    <form action="/planets/add" method="post">
        <label for="name">Nom de la planète:</label>
        <input type="text" id="name" name="name" required><br>
        <label for="size">Taille:</label>
        <input type="number" id="size" name="size" required><br>
        <label for="atmosphere">Atmosphère:</label>
        <input type="text" id="atmosphere" name="atmosphere" required><br>
        <label for="type">Type:</label>
        <input type="text" id="type" name="type" required><br>
        <button type="submit">Ajouter</button>
    </form>
    {{#if result}}
        <div id="result">{{result}}</div>
    {{/if}}
</section>
